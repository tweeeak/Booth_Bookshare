<div class="page-header">
  <h1>
    Interests
    <a href="/interests/new" class="btn btn-lg btn-success">New Interest</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Status</th>
        <th>Proposed Price</th>
        <th>Interested</th>
        <th>Book</th>
        <th>Sellers</th>
        <th>Actions</th>
      </tr>

      <% @interests.each do |interest| %>
      <tr>
        <td><%= interest.status.status %></td>
        <td><%= number_to_currency(interest.prop_price) %></td>
        <td><%= interest.user.username.capitalize %></td>
        <td><%= interest.book.title %></td>
        <td><%= interest.listing.user.username.capitalize%></td>
        <td>
          <% if interest.id == current_user.id && interest.status.status == "submitted" then %>
          <a href="/interests/<%= interest.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_interest/<%= interest.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>

          <% if interest.listing.user.id == current_user.id && interest.status.status == "submitted" then %>
          <a href="/interests/<%= interest.id %>/accept" class="btn btn-primary">Accept</a>
          <a href="/interests/<%= interest.id %>/reject" class="btn btn-danger">Reject</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
