<!-- Validation failure messages -->
<% if @interest.errors.any? %>
  <% @interest.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Interest</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_interest" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for status_id -->
      <div class="form-group">
        <label for="status_id" class="control-label">
          Status
        </label>

        <input type="text" id="status_id" name="status_id" placeholder="Status" class="form-control" value="<%= @interest.status_id %>">
      </div>

      <!-- Label and input for prop_price -->
      <div class="form-group">
        <label for="prop_price" class="control-label">
          Prop price
        </label>

        <input type="text" id="prop_price" name="prop_price" placeholder="Prop price" class="form-control" value="<%= number_to_currency(@interest.prop_price) %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @interest.user_id %>">
      </div>

      <!-- Label and input for listing_id -->
      <div class="form-group">
        <label for="listing_id" class="control-label">
          Listing
        </label>

        <input type="text" id="listing_id" name="listing_id" placeholder="Listing" class="form-control" value="<%= @interest.listing_id %>">
      </div>

      <button class="btn btn-success">
        Create Interest
      </button>
      or
      <a href="/interests">Cancel</a>
    </form>
  </div>
</div>

