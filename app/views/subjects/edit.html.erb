<!-- Validation failure messages -->
<% if @subject.errors.any? %>
  <% @subject.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Subject #<%= @subject.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_subject/<%= @subject.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for subject_number -->
      <div class="form-group">
        <label for="subject_number" class="control-label">
          Subject number
        </label>

        <input type="text" id="subject_number" name="subject_number" placeholder="Subject number" class="form-control" value="<%= @subject.subject_number %>">
      </div>

      <!-- Label and input for subject_name -->
      <div class="form-group">
        <label for="subject_name" class="control-label">
          Subject name
        </label>

        <input type="text" id="subject_name" name="subject_name" placeholder="Subject name" class="form-control" value="<%= @subject.subject_name %>">
      </div>

      <button class="btn btn-warning">
        Update Subject
      </button>
      or
      <a href="/subjects/<%= @subject.id %>">Cancel</a>
    </form>
  </div>
</div>
