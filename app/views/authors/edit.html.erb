<!-- Validation failure messages -->
<% if @author.errors.any? %>
  <% @author.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Author #<%= @author.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_author/<%= @author.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for author_name -->
      <div class="form-group">
        <label for="author_name" class="control-label">
          Author name
        </label>

        <input type="text" id="author_name" name="author_name" placeholder="Author name" class="form-control" value="<%= @author.author_name %>">
      </div>

      <button class="btn btn-warning">
        Update Author
      </button>
      or
      <a href="/authors/<%= @author.id %>">Cancel</a>
    </form>
  </div>
</div>
