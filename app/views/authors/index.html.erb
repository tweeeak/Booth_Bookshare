<div class="page-header">
  <h1>
    Authors
    <a href="/authors/new" class="btn btn-lg btn-success">New Author</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Author name</th>
        <th>Actions</th>
      </tr>

      <% @authors.each do |author| %>
      <tr>
        <td><%= author.author_name %></td>
        <td>
          <a href="/authors/<%= author.id %>" class="btn btn-primary">Show</a>
          <a href="/authors/<%= author.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_author/<%= author.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
