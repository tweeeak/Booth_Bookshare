<div class="container">

  <%= render("/shared/new_post.html.erb",
  :mouseover   => "Add new book",
  :destination => "/books/new",
  :content     => ["fa fa-plus", "fa fa-book"]
  )%>




<div class="row">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title" align = "center">
        Book List
      </h3>
    </div>


    <table class="table table-striped table-condensed table-hover">
      <tr>
        <th>Artwork</th>
        <th>Title</th>
        <th>Subject</th>
        <th>Year</th>
        <th>Publisher</th>
        <th>Authors</th>
        <th>Actions</th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <td><img src="<%= book.artwork %>"></td>
        <td><%= book.title %></td>
        <td><%= book.subject.subject_number %> - <%= book.subject.subject_name %></td>
        <td><%= book.year %></td>
        <td><%= book.publisher %></td>
        <td><% book.authors.each do |author| %>
        <p><%= author.author_name %></p>
        <% end %>
        </td>

        <td>
          <span title="Details and selling information"><a href="/books/<%= book.id %>" class="btn btn-primary"><i class="fa fa-info-circle"></i></a></span>
          <% if current_user.username == "admin" then %>
          <a href="/books/<%= book.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_book/<%= book.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>

  </div>
</div>
</div>
